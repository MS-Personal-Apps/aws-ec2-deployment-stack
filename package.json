{
  "name": "aws-ec2-deployment-stack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf .build .cache .eslintcache .serverless coverage",
    "dev": "sls offline start --stage local",
    "invoke": "sls invoke local -f aws-ec2-deployment-stack -p test/fixtures/sqs-event.json",
    "fix": "npm run fix:ts && npm run fix:misc",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "lint": "npm run lint:ts && npm run lint:package && npm run lint:pretty",
    "lint:package": "npmPkgJsonLint .",
    "lint:pretty": "prettier --check .",
    "lint:ts": "eslint . --cache --fix --ext .ts,.tsx",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "start": "sls offline start",
    "test": "jest --detectOpenHandles --coverage --testPathIgnorePatterns=test/",
    "test:int": "jest --config ./test/jest.config.js",
    "test:int:ci": "jest --config ./test/jest.config.js --ci",
    "terraform-local-shell": "powershell -File terraform-local.ps1",
    "terraform-local": "terraform workspace select aws-ec2-deployment-stack-local || terraform workspace new aws-ec2-deployment-stack-local && cd terraform && terraform apply --var-file=./workspaces/local.tfvars --var='profile=' --auto-approve",
    "terraform-init": "cd terraform && terraform init -reconfigure --backend-config=./backends/local.conf",
    "terraform-destroy": "cd terraform && terraform destroy --var-file=./workspaces/local.tfvars --var='profile=' --auto-approve"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-personal:shanrijo/aws-ec2-deployment-stack.git"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-junit": "^14.0.1",
    "jsonlint": "^1.6.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "serverless": "^3.22.0",
    "serverless-bundle": "^6.0.0",
    "serverless-offline": "^10.0.2",
    "yaml-lint": "^1.2.4"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  }
}